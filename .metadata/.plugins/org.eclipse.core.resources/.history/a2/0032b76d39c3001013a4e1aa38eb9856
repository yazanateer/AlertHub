package com.alerthub.logger.service;

import java.time.Instant;
import java.util.List;

import org.springframework.stereotype.Service;

import com.alerthub.logger.dto.LogEntryRequest;
import com.alerthub.logger.model.LogEntry;
import com.alerthub.logger.model.LogLevel;
import com.alerthub.logger.repository.LogEntryRepository;

import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
public class LogServiceImpl implements LogService {

	private final LogEntryRepository logEntryRepository;
	
	
	@Override
	public LogEntry createLog(LogEntryRequest request) {
		
	}

	@Override
	public List<LogEntry> getAllLogs() {
		return logEntryRepository.findAll();
	}

	@Override
	public List<LogEntry> getLogsByServiceName(String serviceName) {
		return logEntryRepository.findByServiceName(serviceName);
	}

	@Override
	public List<LogEntry> getLogsByLogLevel(LogLevel logLevel) {
		return logEntryRepository.findByLogLevel(logLevel);
	}

	@Override
	public List<LogEntry> getLogsByServiceNameAndLogLevel(String serviceName, LogLevel logLevel) {
		return logEntryRepository.findByServiceNameAndLogLevel(serviceName, logLevel);
	}

	@Override
	public List<LogEntry> getLogsByTimestamp(Instant from, Instant to) {
		return logEntryRepository.findByTimestampBetween(from, to);
	}

}
