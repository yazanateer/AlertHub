package com.alerthub.logger.controller;

import java.util.List;

import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import com.alerthub.logger.dto.LogEntryRequest;
import com.alerthub.logger.model.LogEntry;
import com.alerthub.logger.model.LogLevel;
import com.alerthub.logger.service.LogService;

import io.swagger.v3.oas.annotations.Operation;
import io.swagger.v3.oas.annotations.tags.Tag;
import jakarta.validation.Valid;
import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.NotNull;
import lombok.RequiredArgsConstructor;

@RestController
@RequestMapping("api/logs")
@RequiredArgsConstructor
@Tag(name = "Logger")
public class LogController {

	private final LogService logService;
	
	@PostMapping
	@ResponseStatus(HttpStatus.CREATED)
	@Operation(summary="create a new log")
	public LogEntry createLog(@RequestParam @Valid LogEntryRequest rqeuest) {
		return logService.createLog(rqeuest);
	}
	
	@GetMapping
	@Operation(summary="get all the logs")
	public List<LogEntry> getAllLogs() {
		return logService.getAllLogs();
	}
	
	@GetMapping("by-service")
	@Operation(summary="get logs by name")
	public List<LogEntry> getLogsByServiceName(
			@RequestParam(name = "serviceName", required = true)
			@NotBlank(message = "serviceNmae must not be blank")
			String serviceName
			) {
		return logService.getLogsByServiceName(serviceName);
	}
	
	@GetMapping("by-level")
	@Operation(summary="get logs by level")
	public List<LogEntry> getLogsByLogLevel(
			@RequestParam(name="level", required=true)
			@NotNull(message="level cannot be null")
			LogLevel level){
		try {
			LogLevel logLevel = LogLevel.valueOf(level.toUpperCase());
		} catch() {
			
		}
		
		return logService.getLogsByLogLevel(logLevel);
	}
	
	
	try {
        LogLevel logLevel = LogLevel.valueOf(level.toUpperCase());
        return logService.getLogsByLevel(logLevel);
    } catch (IllegalArgumentException ex) {
        throw new IllegalArgumentException(
                "Invalid level. Allowed values: " + Arrays.toString(LogLevel.values())
        );
    }
	

	
	
	
}
